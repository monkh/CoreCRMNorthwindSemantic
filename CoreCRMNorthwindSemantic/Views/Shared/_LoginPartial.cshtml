@using Microsoft.AspNetCore.Identity
@using CoreCRMNorthwindSemantic.Areas.Identity.Data;

@inject SignInManager<CoreCRMNorthwindSemanticUser> SignInManager
@inject UserManager<CoreCRMNorthwindSemanticUser> UserManager

@if (SignInManager.IsSignedIn(User))
{
    <form asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })" method="post" id="logoutForm" class="navbar-right">
        <ul class="nav navbar-nav navbar-right">
            <li>
                <a asp-area="Identity" asp-page="/Account/Manage/Index" title="Manage">Hello @UserManager.GetUserName(User)!</a>
            </li>
            <li>
                <button type="submit" class="btn btn-link navbar-btn navbar-link">Logout</button>
            </li>
        </ul>
    </form>
}
else
{
    <li class="">
        <a href="#"><span><i class="fa fa-fw fa-bars"></i> Account</span><span class="cnt">2</span></a>
        <ul style="display: block;">
            <li class="even"><a asp-area="Identity" asp-page="/Account/Register">Register</a></li>
            <li class="odd"><a asp-area="Identity" asp-page="/Account/Login">Login</a></li>
        </ul>
    </li>

}


